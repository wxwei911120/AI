# AI Marketing System - Production Environment Configuration
# 複製此文件為 .env 並設置你的配置

# 服務器配置
PORT=7861
HOST=0.0.0.0

# 安全認證 (強烈建議在生產環境中啟用)
AI_MARKETING_USERNAME=admin
AI_MARKETING_PASSWORD=your_secure_password_here

# SSL配置 (HTTPS)
SSL_CERTFILE=/path/to/your/certificate.crt
SSL_KEYFILE=/path/to/your/private.key
SSL_PASSWORD=your_ssl_password

# AI模型配置
CUDA_VISIBLE_DEVICES=0
PYTORCH_CUDA_ALLOC_CONF=max_split_size_mb:1024

# 應用配置
MAX_CONCURRENT_USERS=50
ENABLE_ANALYTICS=true
LOG_LEVEL=INFO

# 雲服務提供商配置 (選擇一個)
# AWS
# AWS_ACCESS_KEY_ID=your_aws_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret
# AWS_DEFAULT_REGION=us-west-2

# Google Cloud
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
# GOOGLE_CLOUD_PROJECT=your-project-id

# Azure
# AZURE_SUBSCRIPTION_ID=your_subscription_id
# AZURE_TENANT_ID=your_tenant_id

# 資料庫配置 (可選)
# DATABASE_URL=postgresql://user:password@localhost:5432/ai_marketing
# REDIS_URL=redis://localhost:6379

# 監控配置 (可選)
# SENTRY_DSN=your_sentry_dsn
# DATADOG_API_KEY=your_datadog_key