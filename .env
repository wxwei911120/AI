# 環境變數配置
# 複製並重命名為 .env

# 基本配置
APP_NAME="AI營銷內容生成系統"
DEBUG=false

# GPU配置
CUDA_VISIBLE_DEVICES=0
TORCH_CUDA_ALLOC_CONF=max_split_size_mb:512

# 數據庫配置
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=ai_marketing
POSTGRES_USER=ai_user
POSTGRES_PASSWORD=your_secure_password_2024

# Redis配置
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT配置
API_SECRET_KEY=your_jwt_secret_key_here_please_change_this_in_production_2024

# AWS S3配置 (可選，暫時留空)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_BUCKET_NAME=

# 模型配置
MODEL_CACHE_DIR=/app/checkpoints
USE_CUDA=true

# API配置
API_HOST=0.0.0.0
API_PORT=8000
GRADIO_HOST=0.0.0.0
GRADIO_PORT=7860

# 性能配置
MAX_CONCURRENT_JOBS=2
BATCH_SIZE=1